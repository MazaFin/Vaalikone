    <servlet>
        <servlet-name>EhdokasVastaukset</servlet-name>
        <servlet-class>vaalikone.EhdokasVastaukset</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EhdokasLogin</servlet-name>
        <servlet-class>vaalikone.EhdokasLogin</servlet-class>
